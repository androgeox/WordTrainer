<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        card_view:cardCornerRadius="32dp"
        card_view:cardBackgroundColor = "#FF87D5F4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="300dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id = "@+id/txtView"
                android:layout_gravity="center_horizontal"
                android:textSize="50dp"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"

        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#f50"
        android:layout_above="@+id/inputSolution"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignStart="@+id/cv"
         />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:src="@android:drawable/ic_menu_gallery"
        app:backgroundTint="#0d0"
        app:rippleColor="#0df"
        android:layout_alignTop="@+id/fab_add"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:src="@android:drawable/ic_menu_delete"
        app:backgroundTint="#ddd"
        app:rippleColor="#0df"
        android:layout_alignTop="@+id/fab_add"
        android:layout_alignRight="@+id/cv"
        android:layout_alignEnd="@+id/cv"
         />



    <android.support.design.widget.FloatingActionButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/prevBtn"
        android:text="Предыдущее"
        android:clickable="true"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_previous"
        app:backgroundTint="#FF87D5F4"
        android:layout_alignTop="@+id/checkBtn"
        android:layout_alignLeft="@+id/inputSolution"
        android:layout_alignStart="@+id/inputSolution"
        android:layout_alignRight="@+id/fab_add"
        android:layout_alignEnd="@+id/fab_add" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/checkBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:translationZ="10dp"
        android:textColorHint="#5b9ef0"
        android:text="Проверить"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_play"
        app:backgroundTint="#FF87D5F4"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/nextBtn"
        android:text="Следующее"
        android:lines="@integer/design_snackbar_text_max_lines"
        android:clickable="true"
        android:onClick="onClick"
        android:src="@android:drawable/ic_media_next"
        app:backgroundTint="#FF87D5F4"
        android:layout_below="@+id/inputSolution"
        android:layout_alignRight="@+id/inputSolution"
        android:layout_alignEnd="@+id/inputSolution" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputSolution"
        android:layout_above="@+id/prevBtn"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignStart="@+id/cv"
        android:layout_alignRight="@+id/cv"
        android:layout_alignEnd="@+id/cv"
        android:hint="Введите перевод"/>

</RelativeLayout>