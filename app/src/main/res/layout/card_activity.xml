<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cv"
        card_view:cardCornerRadius="32dp"
        card_view:cardBackgroundColor = "#0d0"
        android:padding="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="200dp"
        android:layout_centerHorizontal="true"
        android:translationZ="100dp">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/txtView"
            android:layout_gravity="center_vertical"
            android:layout_margin="50dp"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textStyle="bold|italic" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputSolution"
        android:layout_above="@+id/addcard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/prevBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/checkBtn" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/checkBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:translationZ="10dp"
        android:textColorHint="#5b9ef0"
        android:text="Проверить" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_above="@+id/checkBtn"
        android:layout_alignRight="@+id/cv"
        android:layout_alignEnd="@+id/cv" />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/nextBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/test"
        android:layout_alignTop="@+id/addcard"
        android:layout_alignLeft="@+id/cv"
        android:layout_alignStart="@+id/cv"
        android:layout_alignRight="@+id/checkBtn"
        android:layout_alignEnd="@+id/checkBtn"
        android:layout_above="@+id/nextBtn" />

</RelativeLayout>